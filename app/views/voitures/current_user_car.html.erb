              <%= image_tag voiture.image, class: "h-full w-full object-cover object-center" %>
            </div>
            <div class="relative mt-4">
              <h3 class="text-sm font-medium text-gray-900"><%= voiture.marque %></h3>
              <p class="mt-1 text-sm text-gray-500"><%= voiture.modele %></p>
            </div>
            <div class="absolute inset-x-0 top-0 flex h-72 items-end justify-end overflow-hidden rounded-lg p-4">
              <div aria-hidden="true" class="absolute inset-x-0 bottom-0 h-36 bg-gradient-to-t from-black opacity-50"></div>
              <p class="relative text-lg font-semibold text-white"><%= voiture.prix %> € / jour</p>
            </div>
          </div>

